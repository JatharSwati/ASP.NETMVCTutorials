        @Html.LabelFor(model => model.CustomerJoiningTime) &nbsp; @Html.EditorFor(model => model.CustomerJoiningTime, "", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CustomerJoiningTime, "", new { @class = "text-danger" })
    </p>

    <input type="submit" value="Submit" class="btn btn-info" />

    @Html.Raw(ViewData["SuccessMessage"])
