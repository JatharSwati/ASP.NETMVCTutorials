        @Html.ValidationMessageFor(model => model.CustomerPassword, "", new { @class = "text-danger" })
    </p>

    <p>
        @Html.LabelFor(model => model.CustomerConfirmPassword) &nbsp; @Html.EditorFor(model => model.CustomerConfirmPassword, "", new { htmlAttributes = new { @class = "form-control" } })
